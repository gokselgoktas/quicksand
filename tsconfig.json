{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext"
    },

    "include": ["src"]
}
